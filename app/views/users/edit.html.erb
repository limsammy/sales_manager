<%= simple_nested_form_for current_user, html: {class: 'form-material form-horizontal'} do |f| %>
  <div class='form-inputs'>
    <div class='col-md-6'>
      <%= f.input :first_name, placeholder: 'First_name' %>
    </div>
    <div class='col-md-6'>
      <%= f.input :last_name, placeholder: 'Last Name' %>
    </div>
    <div class='col-md-6'>
      <%= f.input :mob_no, placeholder: 'Mobile number' %>
    </div>
    <div class='col-md-6'>
      <%= f.input :email, placeholder: 'Email' %>
    </div>
    <div class='col-md-6'>
      <%= f.input :department, placeholder: 'Department' %>
    </div>
    <div>
      <%= f.submit 'Save',class: 'btn btn-info btn-lg'%>
    </div>
  </div>
<%end %>

