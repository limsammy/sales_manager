  <div class="row">
    <div class="col-lg-12">
      <div class="white-box">
        <h3 class="box-title m-b-0">Products </h3>
        <table class="table", id="product_list">
          <thead>
            <tr>
              <th>Select</th>
              <th>Product Name</th>
              <th>Product Code</th>
              <th>Product Price</th>
              <th>Stock in Hand</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= check_box_tag product.id %></a></td>
                <td><%= product.name %></td>
                <td><span class="text-muted"><%= product.code %></span> </td>
                <td>
                  <div class="text-muted"><%= product.price %></div>
                </td>
                <td><%= product.stock_in_hand %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<script>
  datatable('product_list', 0, [0], 20, [0])
</script>
