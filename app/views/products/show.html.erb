<form class="form-horizontal form-material col-md-6 col-md-offset-3 white-box">
  <h3> PRODUCT DETAILS </h3>
  <fieldset>
    <div class="form-group">
      <label class="col-md-3" for="fn">Name:</label>
      <div class="col-md-9">
        <span> <%= @product.name %>
        </span>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3" for="fn">Code:</label>
      <div class="col-md-9">
        <span> <%= @product.code %>
        </span>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3" for="fn">Price:</label>
      <div class="col-md-9">
        <span>
          <strong><%= assign_dollar %></strong>
          <%= round_off(@product.price) %>
        </span>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-3" for="fn">Stock in hand:</label>
      <div class="col-md-9">
        <span>
         <%= @product.stock_in_hand %>
        </span>
      </div>
    </div>
    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Back', products_path %>
  </fieldset>
</form>
