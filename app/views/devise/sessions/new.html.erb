<%= form_for(resource, as: resource_name, html: {class: "form-horizontal form-material", id: "loginform"}, url: session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <h3 class="box-title m-b-20">Sign In</h3>
  <div class="form-group ">
    <div class="col-xs-12">
      <%= f.email_field :email, class: "form-control", type: "text", required: "", placeholder: "Email" %>
    </div>
  </div>
  <div class="form-group ">
    <div class="col-xs-12">
      <%= f.password_field :password, class: "form-control", type: "password", required: "", placeholder: "Password" %>
    </div>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <div class="col-md-12">
          <div class="checkbox checkbox-primary p-t-0">
              <%= f.check_box :remember_me, type: "checkbox"%>
              <%= f.label :remember_me %>
              <!-- <label for="checkbox-signup"> I agree to all <a href="#">Terms</a></label> -->
          </div>
      </div>
    </div>
  <% end %>
  <div class="form-group text-center m-t-20">
    <div class="col-xs-12">
      <%= f.submit "Log in",  class: "btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light"%>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
