<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-horizontal form-material", method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.email_field :email, class: "form-control", type: "text", required: "", placeholder: "Enter your email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send",  class: "btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>




