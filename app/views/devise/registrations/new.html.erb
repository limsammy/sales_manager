<%= form_for(resource, as: resource_name, html: {class: "form-horizontal form-material", id: "loginform"}, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <h3 class="box-title m-b-20">Sign Up</h3>
  <div class="form-group ">
    <div class="col-xs-12">
      <%= f.email_field :email, class: "form-control", type: "text", required: "", placeholder: "Email" %>
    </div>
  </div>

  <div class="form-group ">
    <div class="col-xs-12">
      <% if @minimum_password_length %>
        <%= f.password_field :password, class: "form-control", type: "password", required: "", placeholder: "Password (#{ @minimum_password_length} characters minimum)" %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12">
      <%= f.password_field :password_confirmation, class: "form-control", type: "password", required: "", placeholder: "Password Confirmation" %>
    </div>
  </div>
  <div class="form-group text-center m-t-20">
    <div class="col-xs-12">
      <%= f.submit "Sign up",  class: "btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light"%>
    </div>
  </div>
  <div class="actions">
  </div>
<% end %>

